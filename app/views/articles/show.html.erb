<div class="container article-div">


  <div class="card text-center">
    <div class="card-header">
      <%= @article.title %>
    </div>
    <div class="row justify-content-center">
      <div class="col ">
        <div class="jumbotron">
          <div class="container">
            <h1 align= "center"> <%= @article.user.userName %> </h1>
            <div class="row justify-content-md-center">
              <div class="col-auto">
                <%= gravatar_for @article.user, size: 80%>
              </div>
            </div>
          </div>
          <div class="row justify-content-center">
            <%= pluralize(@article.user.articles.count, "articles") if @article.user.articles %>
          </div>
        </div>
      </div>
    </div>
    <div class="card-body">
      <h5 class="card-title"><%= @article.title %>:</h5>
      <p class="card-text"><%= @article.description %></p>
    </div>
    <div class="card-footer text-muted">
      <%= link_to "back to articles", articles_path %> |
        <% if logged_in? && current_user == @article.user %>
          <%= link_to "edit this article", edit_article_path(@article) %> |
          <%= link_to "delete this article", article_path(@article), method: :delete, data: {confirm: "are you sure?"} %>
        <% end %>
    </div>
  </div>


</div>
